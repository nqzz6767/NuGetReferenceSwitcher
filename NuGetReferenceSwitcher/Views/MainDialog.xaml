<Window x:Class="RicoSuter.NuGetReferenceSwitcher.Views.MainDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:RicoSuter.NuGetReferenceSwitcher.ViewModels"
        xmlns:converters="clr-namespace:MyToolkit.Converters;assembly=MyToolkit.Extended"
        Title="Switch NuGet and Project references" 
        Height="500" Width="700" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <viewModels:MainDialogModel x:Key="ViewModel" />
        <converters:NotConverter x:Key="NotConverter" />
        <converters:VisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>
    
    <Grid DataContext="{StaticResource ViewModel}">
        <TextBlock Text="Please wait..." Margin="8" 
                   Visibility="{Binding IsLoading, Converter={StaticResource VisibilityConverter}}" />
        
        <TabControl Margin="0,12,0,0" Visibility="{Binding IsLoading, Converter={StaticResource NotConverter}}">
            <TabItem Header="Switch to project references">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <ScrollViewer Margin="0,0,4,0">
                        <StackPanel Margin="8">
                            <TextBlock Text="Projects with NuGet DLL references: " FontWeight="Bold" />
                            <ItemsControl ItemsSource="{Binding Projects}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,4" />
                                            <ItemsControl ItemsSource="{Binding NuGetReferences}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Name}" Margin="0,0,0,4" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer Grid.Column="1">
                        <StackPanel Margin="8">
                            <TextBlock Text="NuGet DLL switches: " FontWeight="Bold" />
                            <ItemsControl ItemsSource="{Binding Switches}" Margin="0,0,0,8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="{Binding FromAssemblyName}" FontWeight="Bold" Margin="0,0,0,4" />
                                            <TextBlock Text="{Binding FromAssemblyPath}" TextWrapping="Wrap" Margin="0,0,0,4" />

                                            <RadioButton IsChecked="{Binding IsDeactivated, Mode=TwoWay}" 
                                                         GroupName="{Binding FromAssemblyName}"
                                                         Content="Do not replace" />

                                            <RadioButton IsChecked="{Binding IsProjectPathSelected, Mode=TwoWay}" 
                                                         GroupName="{Binding FromAssemblyName}"
                                                         Content="Add new Project to Solution" />

                                            <RadioButton IsChecked="False" 
                                                         GroupName="{Binding FromAssemblyName}"
                                                         Content="Use existing Project" />

                                            <StackPanel Visibility="{Binding IsDeactivated, Converter={StaticResource NotConverter}}">
                                                <StackPanel Visibility="{Binding IsProjectPathSelected, Converter={StaticResource VisibilityConverter}}">
                                                    <Button Content="Select Project to add" Click="ButtonBase_OnClick" Tag="{Binding}" />
                                                    <TextBlock Text="{Binding ProjectPath}" />
                                                </StackPanel>

                                                <StackPanel Visibility="{Binding IsProjectPathSelected, Converter={StaticResource NotConverter}}">
                                                    <ComboBox ItemsSource="{Binding Projects, Source={StaticResource ViewModel}}"
                                                              SelectedItem="{Binding ToProject, Mode=TwoWay}"
                                                              DisplayMemberPath="Name" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Content="Switch to Project references" Click="OnSwitchToProjectReferences" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Switch to NuGet references">
                <Grid Margin="8">
                    <ScrollViewer>
                        <StackPanel Margin="8">
                            <TextBlock Text="Projects with NuGet DLL references: " FontWeight="Bold" />
                            <ItemsControl ItemsSource="{Binding Projects}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,4" />
                                            <ItemsControl ItemsSource="{Binding ProjectToAssemblySwitches}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Margin="0,0,0,4" TextWrapping="Wrap">
                                                            <Run Text="From " />
                                                            <Run Text="{Binding FromProjectName}" FontWeight="Bold" />
                                                            <LineBreak />
                                                            <Run Text=" to " />
                                                            <Run Text="{Binding ToAssemblyPath}" FontWeight="Bold" />
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <CheckBox Content="Remove Projects from Solution" 
                                      IsChecked="{Binding RemoveProjects, Mode=TwoWay}" Margin="0,8,0,8" />
                            
                            <Button Content="Switch to NuGet references" Click="OnSwitchToNuGetReferences" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
